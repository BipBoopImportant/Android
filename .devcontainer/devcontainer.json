{
  "name": "Android Procedural App Builder",
  // Use the Universal Dev Container image which includes Java, Python, Git, and other common tools.
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  // Add the Android SDK feature. This will download and install the SDK for us.
  "features": {
    "ghcr.io/devcontainers/features/android-sdk:2": {
      "installBuildTools": true,
      "installPlatforms": true,
      "buildToolsVersion": "34.0.0",
      "platformVersion": "34"
    }
  },

  // Forward ports if you were to run an emulator or other services. Not strictly needed for building.
  // "forwardPorts": [],

  // This command runs automatically after the container is created.
  // It executes our setup script to finalize the configuration.
  "postCreateCommand": "bash ./.devcontainer/post-create.sh",

  // Configure VS Code settings for the Codespace.
  "customizations": {
    "vscode": {
      "settings": {
        "java.jdt.ls.java.home": "/usr/lib/jvm/msopenjdk-17-amd64"
      },
      // Recommend useful extensions for Android development.
      "extensions": [
        "kotlin-language",
        "vscjava.vscode-java-pack",
        "google.android-ide",
        "fwcd.kotlin"
      ]
    }
  },

  // Run as a non-root user.
  "remoteUser": "vscode"
}
